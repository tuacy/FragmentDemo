<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_static_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="静态Fragment使用"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_base_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="动态Fragment使用"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ViewPager + Fragment使用"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_back_stack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fragment回退栈使用"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_argument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fragment参数传递"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_shared_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Shared Element共享元素的使用"
        android:textAllCaps="false"/>

</LinearLayout>
